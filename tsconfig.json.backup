{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,

    "skipLibCheck": true,
    "allowJs": true,
    "isolatedModules": true,
    "esModuleInterop": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*", 
    "core/**/*", 
    "governance/**/*", 
    "audit/**/*", 
    "cells/**/*",
    "*.ts", 
    "*.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
