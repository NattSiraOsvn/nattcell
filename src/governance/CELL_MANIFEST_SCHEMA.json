{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "NATT-OS Cell Manifest Schema",
  "description": "Constitutional validation schema for all cell manifests",
  "type": "object",
  "required": [
    "ADN",
    "metadata",
    "status",
    "version",
    "boundary"
  ],
  "properties": {
    "ADN": {
      "type": "object",
      "required": [
        "identity",
        "capability",
        "boundary",
        "trace",
        "confidence",
        "smartlink",
        "lifecycle"
      ],
      "properties": {
        "identity": {
          "type": "object",
          "required": ["name", "version", "cell_type"],
          "properties": {
            "name": { "type": "string", "pattern": "^[a-z-]+-cell$" },
            "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
            "cell_type": { "enum": ["kernel", "infrastructure", "business", "legacy"] }
          }
        },
        "capability": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["created", "last_modified", "author"],
      "properties": {
        "created": { "type": "string", "format": "date-time" },
        "last_modified": { "type": "string", "format": "date-time" },
        "author": { "enum": ["KIM", "BĂNG", "THIÊN", "BỐI_BỐI"] }
      }
    },
    "status": {
      "type": "string",
      "enum": ["ACTIVE", "QUARANTINED", "DEPRECATED", "DEVELOPMENT"]
    },
    "boundary": {
      "type": "object",
      "required": ["imports", "exports", "dependencies"],
      "properties": {
        "imports": { "type": "array", "items": { "type": "string" } },
        "exports": { "type": "array", "items": { "type": "string" } },
        "dependencies": { "type": "array", "items": { "type": "string" } }
      }
    }
  },
  "additionalProperties": false
}
